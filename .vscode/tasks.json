{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "remote-publish",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "--sc",
                "-r",
                "linux-arm64",
                "-c",
                "Debug",
                "-o",
                // It is attached via sshfs
                "~/Documents/playground/Gpiot"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}